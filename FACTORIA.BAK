// 1. Write a Program using function to find factorial of a number.
#include<stdio.h>
#include<conio.h>
long int fact(int);
int main()
{
 int num;
 clrscr();
 printf("Enter the Number : ");
 scanf("%ld", &num);
 if(num >= 0)
  printf("Factorial of %d is %ld", num, fact(num));
 else
  printf("Invalid Input");
 getch();
 return 0;
}
long int fact(int n)
{
 if(n == 0 || n == 1)
  return 1;
 return (n * fact(n-1));
}
